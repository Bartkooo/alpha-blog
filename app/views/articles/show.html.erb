<h1 class="text-center mt-4 mb-4">Article</h1>

<div class="container d-flex align-items-center flex-column">
  <div class="card text-center shadow mb-5 bg-body rounded" style="width: 45em;">
    <div class="card-header fst-italic">
      by <%= @article.user.username %></br>
      <% if @article.categories.any? %>
        <%= render @article.categories %>
      <% end %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @article.title %></h5>
      <div class="card-text"><%= simple_format(@article.description) %></div>
      <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
        <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-success" %>
        <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <small>
        Created <%= time_ago_in_words(@article.created_at) %> ago,
        edited <%= time_ago_in_words(@article.updated_at) %> ago
      </small>
    </div>
  </div>
</div>