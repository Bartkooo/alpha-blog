<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td>
          <%= link_to "Show", article_path(a) %>
          <%= link_to "Edit", edit_article_path(a) %>
          <%= link_to "Delete", article_path(a), data: { turbo_method: :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button><%= link_to "New article", new_article_path %></button>
