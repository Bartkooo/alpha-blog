<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true) do |f| %>
  <div class="container border rounded p-4 bg-light shadow" style="width: 45em;">
    <div class="mb-4">
      <%= f.label :title, class:"form-label" %></br>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="mb-4">
      <%= f.label :description, class:"form-label" %></br>
      <%= f.text_area :description, class:"form-control" %>
    </div>
    <div class="mb-4">
      <%= f.label :category, class:"form-label" %></br>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
        <%= b.check_box class:"btn-check" %>
        <%= b.label class:"btn btn-outline-secondary" %>
      <% end %>
    </div></br>

    <%= f.submit class:"btn btn-success" %>
    <%= link_to "Cancel", articles_path, class:"btn btn-danger" %>
  </div>
<% end %>
