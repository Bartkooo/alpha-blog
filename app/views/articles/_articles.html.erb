<div class="container d-flex align-items-center flex-column mt-2">
  <% @articles.each do |a| %>
    <div class="card text-center shadow mb-5 bg-body rounded" style="width: 45em;">
      <div class="card-header fst-italic">
        by <%= link_to a.user.username, user_path(a.user) %></br>
        <% if a.categories.any? %>
          <%= render a.categories %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to a.title, article_path(a), class:"text-success text-decoration-none" %></h5>
        <p class="card-text"><%= truncate(a.description, length: 100) %></p>
        <% if logged_in? && (a.user == current_user || current_user.admin?) %>
          <%= link_to "Show", article_path(a), class:"btn btn-outline-primary" %>
          <%= link_to "Edit", edit_article_path(a), class:"btn btn-outline-success" %>
          <%= link_to "Delete", article_path(a), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created <%= time_ago_in_words(a.created_at) %> ago,
          edited <%= time_ago_in_words(a.updated_at) %> ago,
          comments: <%= a.comments.count %>
        </small>
      </div>
    </div>
  <% end %>
</div>
