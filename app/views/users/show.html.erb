<h1 class="text-center mt-4 mb-4"><%= @user.username %> profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class:"btn btn-outline-success" %>
  </div>
<% end %>

<% if @user.articles.length > 0 %>
  <h3 class="text-center mt-4 mb-4">Articles</h3>
<% else %>
  <h3 class="text-center mt-4">No articles</h3>
<% end %>

<div class="apple_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

