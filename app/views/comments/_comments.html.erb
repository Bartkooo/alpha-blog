<% @article.comments.reverse_each do |c| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
      <div>
        <strong><%= link_to c.user.username, user_path(c.user) %></strong> 
        <span class="fw-light"><%= time_ago_in_words(c.created_at) %> ago</span>
      </div>
      <div><%= c.text %></div>
    </div>
    <% if current_user.id == c.user_id %>
      <%= link_to '', article_comment_path(c.article, c), data: { turbo_method: :delete }, class:"btn-close"  %>
    <% end %>
  </li>
<% end %>