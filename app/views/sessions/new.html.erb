<h1 class="text-center mt-4 mb-4">Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |u| %>
  <div class="container border rounded p-4 bg-light shadow" style="width: 45em;">
    <div class="mb-4">
      <%= u.label :email, class:"form-label" %></br>
      <%= u.email_field :email, class:"form-control" %>
    </div>
    <div class="mb-4">
      <%= u.label :password, class:"form-label" %></br>
      <%= u.password_field :password, class:"form-control" %>
    </div>
    <%= u.submit "Log in", class:"btn btn-success" %>
    <%= link_to "Cancel", articles_path, class:"btn btn-danger" %>
  </div>
<% end %>
