<h1 class="text-center mt-4 mb-4">Create category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, local: true) do |u| %>
  <div class="container border rounded p-4 bg-light shadow" style="width: 45em;">
    <div class="mb-3">
      <%= u.label :name, class:"form-label" %></br>
      <%= u.text_field :name, class:"form-control" %>
    </div>
    <%= u.submit class:"btn btn-success" %>
    <%= link_to "Cancel", articles_path, class:"btn btn-danger" %>
  </div>
<% end %>
