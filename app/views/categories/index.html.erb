<h1 class="text-center mt-4 mb-4">Categories</h1>

<div class="container d-flex align-items-center flex-column mt-2">
  <% @categories.each do |c| %>
    <div class="card text-center shadow mb-5 bg-body rounded" style="width: 45em;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to c.name, category_path(c), class:"text-success text-decoration-none" %></h5>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created <%= time_ago_in_words(c.created_at) %> ago,
          edited <%= time_ago_in_words(c.updated_at) %> ago
        </small>
      </div>
    </div>
  <% end %>
</div>
